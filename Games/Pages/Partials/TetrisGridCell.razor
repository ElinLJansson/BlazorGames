@using Games.Models.Tetris
@using Games.Models.Tetris.Tetrominos
@code {
    [Parameter]
    public int Row { get; set; }
    [Parameter]
    public int Column { get; set; }
    [Parameter]
    public Tetromino Tetromino { get; set; } = new();
    [Parameter]
    public Grid Grid { get; set; }
}
 @{
    string extraCSS = "";
    if (Grid.IsStarted)
    {
        if (Tetromino.CoverdCells.Contains(Row, Column))
        {
            extraCSS = "tetris-piece " + Tetromino.CssClass;
        }
        if (Grid.Cells.Contains(Row, Column))
        {
            extraCSS = "tetris-piece " + Grid.Cells.GetCssClass(Row, Column);
        }
    }
}
<div id="@(Row + "-" + Column)" class="tetris-cell @extraCSS">
</div>
